---
import BaseLayout from "./BaseLayout.astro";
const { title } = Astro.props;
---
<BaseLayout>
    <article class="mx-auto px-6 py-10">
        <header class="mb-6">
            <h2 class="text-2xl font-semibold">{title}</h2>
            <p id="progress" class="text-sm text-gray-500 mt-1"></p>
        </header>

        <section class="mb-6">
            <h3 id="question" class="text-lg font-medium mb-4"></h3>
            <form id="options" class="space-y-3"></form>
        </section>

        <footer class="flex justify-end">
            <button
                    id="next"
                    disabled
                    class="px-6 py-2 rounded-lg bg-indigo-600 text-white disabled:bg-gray-300"
            >
                Next
            </button>
        </footer>
    </article>

    <slot />

</BaseLayout>
